extends layout

block content
	.jumbotron
		div.panel.panel-primary
			div.panel-heading
				h3.panel-title= title
			div.panel-body
				form#formAddgallery(name="addgallery",method="put",action="/gallery/contribute/:id")
					+input('english', 'English title')
					+input('japanes', 'Japanese title')
					+input('alternative', 'Alternative title')
					+input('artist', 'Artist name')
					+input('circle', 'Circle name')
					+input('parody', 'Parody title')
					+input('scanlator', 'Scanlator Group')
					+input('convention', 'Convention')
					+input('compilation', 'Compilation')
					+input('description', 'Description')
					+input('uploader', 'Uploader')
					div.btn-group
						a.btn.btn-danger#btnSubmit(href='/', role="button") cancel
						button.btn.btn-success#btnSubmit(type="submit") submit
