extends layout

block content
	.jumbotron
		if usermail
			div.panel.panel-primary
					div.panel-heading
						h3.panel-title= title
					div.panel-body
						form#formAddtag(name="setUser",method="post",action="/account/settings")
							.form-group
								label(for='name') Username:
								input.form-control(id='name', type='text', placeholder=user.name, name='name', maxlength='150')
							.btn-group(role='group', aria-label='Text Submit')
								a.btn.btn-danger#btnSubmit(href='/', role="button") cancel
								button.btn.btn-success#btnSubmit(type="submit") submit
		else
			include signin